<Window x:Class="MusicStoreApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Music Store - Авторизация" Height="300" Width="400">
    <Grid Margin="10">
        <TabControl>
            <!-- Вход -->
            <TabItem Header="Вход">
                <StackPanel Margin="20">
                    <TextBlock Text="Логин:"/>
                    <TextBox x:Name="LoginUsername" Margin="0,0,0,10"/>
                    <TextBlock Text="Пароль:"/>
                    <PasswordBox x:Name="LoginPassword" Margin="0,0,0,10"/>
                    <Button Content="Войти" Click="Login_Click"/>
                </StackPanel>
            </TabItem>

            <!-- Регистрация -->
            <TabItem Header="Регистрация">
                <StackPanel Margin="20">
                    <TextBlock Text="Логин:"/>
                    <TextBox x:Name="RegisterUsername" Margin="0,0,0,10"/>
                    <TextBlock Text="Логин:"/>
                    <PasswordBox x:Name="RegisterPassword" Margin="0,0,0,10"/>
                    <Button Content="Зарегистрироваться" Click="Register_Click"/>
                    <TextBlock x:Name="RegisterStatus" Foreground="Red" Margin="0,10,0,0"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>



<Window x:Class="MusicStoreApp.Views.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicStoreApp.Views"
        mc:Ignorable="d"
        Title="ManagerWindow" Height="450" Width="800">
    <DockPanel Margin="10">
        <Button Content="Выйти" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Margin="0,10,10,0" 
                Width="80"
                DockPanel.Dock="Top"
                Click="Logout_Click"/>

        <!-- Список заказов -->
        <ListView x:Name="OrderListView" Margin="0 0 0 10" Height="350" SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="50"/>
                    <GridViewColumn Header="Покупатель" DisplayMemberBinding="{Binding CustomerName}" Width="150"/>
                    <GridViewColumn Header="Кол-во товаров" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Products.Count}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Сумма" DisplayMemberBinding="{Binding TotalPrice}" Width="100"/>
                    <GridViewColumn Header="Статус" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding IsConfirmed, Converter={StaticResource BoolToStatusConverter}}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,10" DockPanel.Dock="Bottom">
            <Button Content="Отменить заказ"
                    Height="30"
                    Width="120"
                    Margin="5"
                    Click="CancelOrder_Click"/>
            <Button Content="Подтвердить заказ"
                    Height="30"
                    Width="120"
                    Margin="5"
                    Click="ConfirmOrder_Click"/>
        </StackPanel>
    </DockPanel>
</Window>
